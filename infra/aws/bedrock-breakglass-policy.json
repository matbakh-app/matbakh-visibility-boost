{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BedrockFullModelAccess",
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel",
        "bedrock:ListFoundationModels",
        "bedrock:GetFoundationModel"
      ],
      "Resource": [
        "arn:aws:bedrock:eu-central-1::foundation-model/*",
        "arn:aws:bedrock:us-east-1::foundation-model/*"
      ],
      "Condition": {
        "StringLike": {
          "aws:RequestedRegion": ["eu-central-1", "us-east-1"]
        },
        "DateLessThan": {
          "aws:TokenIssueTime": "${aws:RequestTime + 1800}"
        }
      }
    },
    {
      "Sid": "EnhancedLoggingAccess",
      "Effect": "Allow",
      "Action": [
        "logs:*"
      ],
      "Resource": [
        "arn:aws:logs:eu-central-1:*:log-group:/aws/lambda/bedrock-*",
        "arn:aws:logs:eu-central-1:*:log-group:/aws/lambda/bedrock-*:*",
        "arn:aws:logs:us-east-1:*:log-group:/aws/lambda/bedrock-*",
        "arn:aws:logs:us-east-1:*:log-group:/aws/lambda/bedrock-*:*"
      ]
    },
    {
      "Sid": "SecretsManagerFullAccess",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:UpdateSecret",
        "secretsmanager:CreateSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:eu-central-1:*:secret:bedrock/*",
        "arn:aws:secretsmanager:us-east-1:*:secret:bedrock/*"
      ]
    },
    {
      "Sid": "DynamoDBFullAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:*"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-central-1:*:table/bedrock_*",
        "arn:aws:dynamodb:us-east-1:*:table/bedrock_*"
      ]
    },
    {
      "Sid": "LambdaManagementAccess",
      "Effect": "Allow",
      "Action": [
        "lambda:UpdateFunctionConfiguration",
        "lambda:UpdateFunctionCode",
        "lambda:GetFunction",
        "lambda:InvokeFunction"
      ],
      "Resource": [
        "arn:aws:lambda:eu-central-1:*:function:bedrock-*",
        "arn:aws:lambda:us-east-1:*:function:bedrock-*"
      ]
    }
  ]
}