{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BedrockInvokeModelAccess",
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel"
      ],
      "Resource": [
        "arn:aws:bedrock:eu-central-1::foundation-model/anthropic.claude-3-5-sonnet-20240620-v1:0",
        "arn:aws:bedrock:us-east-1::foundation-model/anthropic.claude-3-5-sonnet-20240620-v1:0"
      ],
      "Condition": {
        "StringEquals": {
          "bedrock:modelId": "anthropic.claude-3-5-sonnet-20240620-v1:0"
        },
        "StringLike": {
          "aws:RequestedRegion": ["eu-central-1", "us-east-1"]
        }
      }
    },
    {
      "Sid": "CloudWatchLogsAccess",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams"
      ],
      "Resource": [
        "arn:aws:logs:eu-central-1:*:log-group:/aws/lambda/bedrock-*",
        "arn:aws:logs:eu-central-1:*:log-group:/aws/lambda/bedrock-*:*",
        "arn:aws:logs:us-east-1:*:log-group:/aws/lambda/bedrock-*",
        "arn:aws:logs:us-east-1:*:log-group:/aws/lambda/bedrock-*:*"
      ],
      "Condition": {
        "StringLike": {
          "aws:RequestedRegion": ["eu-central-1", "us-east-1"]
        }
      }
    },
    {
      "Sid": "SecretsManagerAccess",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue"
      ],
      "Resource": [
        "arn:aws:secretsmanager:eu-central-1:*:secret:bedrock/prompt-templates-*",
        "arn:aws:secretsmanager:eu-central-1:*:secret:bedrock/api-keys-*",
        "arn:aws:secretsmanager:us-east-1:*:secret:bedrock/prompt-templates-*",
        "arn:aws:secretsmanager:us-east-1:*:secret:bedrock/api-keys-*"
      ],
      "Condition": {
        "StringLike": {
          "aws:RequestedRegion": ["eu-central-1", "us-east-1"]
        }
      }
    },
    {
      "Sid": "DynamoDBLoggingAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:Query",
        "dynamodb:UpdateItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-central-1:*:table/bedrock_agent_logs",
        "arn:aws:dynamodb:eu-central-1:*:table/bedrock_agent_logs/index/*",
        "arn:aws:dynamodb:us-east-1:*:table/bedrock_agent_logs",
        "arn:aws:dynamodb:us-east-1:*:table/bedrock_agent_logs/index/*"
      ],
      "Condition": {
        "StringLike": {
          "aws:RequestedRegion": ["eu-central-1", "us-east-1"]
        }
      }
    },
    {
      "Sid": "VPCNetworkInterfaceAccess",
      "Effect": "Allow",
      "Action": [
        "ec2:CreateNetworkInterface",
        "ec2:DescribeNetworkInterfaces",
        "ec2:DeleteNetworkInterface",
        "ec2:AttachNetworkInterface",
        "ec2:DetachNetworkInterface"
      ],
      "Resource": "*"
    },
    {
      "Sid": "RDSProxyAccess",
      "Effect": "Allow",
      "Action": [
        "rds-db:connect"
      ],
      "Resource": [
        "arn:aws:rds-db:*:*:dbuser:*/bedrock-agent"
      ]
    },
    {
      "Sid": "S3ReadOnlyAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::matbakh-user-uploads/*"
      ],
      "Condition": {
        "StringLike": {
          "s3:ExistingObjectTag/bedrock-accessible": "true"
        }
      }
    }
  ]
}