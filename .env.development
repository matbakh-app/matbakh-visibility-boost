# Development Environment Configuration

# Enable development features
VITE_DEV_TOOLS_ENABLED=true
VITE_DEBUG_MODE=true
VITE_PERFORMANCE_MONITORING=true

# Development API endpoints
VITE_API_BASE_URL=http://localhost:3001
VITE_MOCK_API=true

# Development logging
VITE_LOG_LEVEL=debug
VITE_CONSOLE_LOGGING=true

# Hot Module Replacement
VITE_HMR_ENABLED=true
VITE_HMR_PORT=5173

# Source maps
VITE_SOURCE_MAPS=true
VITE_INLINE_SOURCE_MAPS=false

# Development optimizations
VITE_FAST_REFRESH=true
VITE_OPTIMIZE_DEPS=true

# TypeScript strict mode (gradual adoption)
VITE_TS_STRICT_MODE=true
VITE_TS_TYPE_CHECKING=true

# Performance debugging
VITE_PERFORMANCE_MARKS=true
VITE_MEMORY_DEBUGGING=true

# Component debugging
VITE_COMPONENT_DEBUGGING=true
VITE_HOOK_DEBUGGING=true

# Bundle analysis
VITE_BUNDLE_ANALYZER=true
VITE_CHUNK_SIZE_WARNING=1000