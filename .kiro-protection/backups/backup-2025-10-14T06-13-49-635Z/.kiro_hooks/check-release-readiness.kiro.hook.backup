{
  "enabled": true,
  "name": "Release Readiness Check",
  "description": "Ensures that a release only proceeds when all release standards are met: Green Core Success > 95%, docs/release-guidance.md is current, and no open TODO placeholders in docs/**/*.md or .audit/**/*.md",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "docs/release-guidance.md",
      "test/green-core-validation/green-core-validation-report.json",
      "docs/**/*.md",
      ".audit/**/*.md"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Execute release readiness validation: 1) Check Green Core success rate from test/green-core-validation/green-core-validation-report.json (must be >95%), 2) Verify docs/release-guidance.md was modified within last 24 hours, 3) Scan all docs/**/*.md and .audit/**/*.md files for TODO placeholders and fail if any found. Report status with ✅/❌ for each check and block release if any check fails."
  }
}