{
  "patterns": ["src/**/*.ts", "src/**/*.tsx"],
  "ignore": [
    "src/archive/**", 
    "archive/**", 
    "reports/**",
    "src/lib/architecture-scanner/**",
    "**/node_modules/**", 
    "**/dist/**", 
    "**/build/**", 
    "**/.next/**",
    "**/.vercel/**",
    "**/coverage/**",
    "**/.git/**"
  ],
  "concurrency": 24,
  "maxFiles": 4000,
  "timeout": 20000,
  "perFileTimeout": 4000,
  "allow": {
    "supabase": [
      "src/components/ContactForm.tsx"
    ],
    "lovable": []
  },
  "thresholds": {
    "overall": 95,
    "auth": 90,
    "vc": 90,
    "apis": 85
  }
}