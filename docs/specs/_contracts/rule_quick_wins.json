{
  "id": "vc.rule.quickwin_post_frequency",
  "trigger": {
    "conditions": [
      {
        "metric": "social_post_frequency",
        "operator": "less_than",
        "value": 1,
        "unit": "posts_per_week"
      },
      {
        "metric": "gmb_post_frequency", 
        "operator": "less_than",
        "value": 0.5,
        "unit": "posts_per_week"
      }
    ],
    "logic": "OR"
  },
  "required_evidence": [
    "adapter.meta.graph.activity",
    "adapter.google.places.posts"
  ],
  "roi_formula": {
    "impact": 0.8,
    "probability": 0.75,
    "revenue_potential": {
      "min": 200,
      "max": 800,
      "currency": "EUR",
      "timeframe": "monthly"
    },
    "effort": 0.3,
    "time": 0.25,
    "cost": 0
  },
  "preview_copy": {
    "de": {
      "title": "Mehr Posts = mehr Sichtbarkeit",
      "summary": "Du postest seltener als ähnliche Betriebe. 2-3 Posts pro Woche könnten dir ~400€ mehr Umsatz bringen.",
      "cta": "Content-Ideen anzeigen"
    },
    "en": {
      "title": "More posts = more visibility", 
      "summary": "You post less frequently than similar businesses. 2-3 posts per week could bring ~€400 more revenue.",
      "cta": "Show content ideas"
    }
  },
  "one_click_actions": [
    {
      "type": "content_generation",
      "template": "weekly_special",
      "fields": [
        {
          "name": "dish_name",
          "type": "text",
          "required": true,
          "placeholder": "z.B. Pasta Carbonara"
        },
        {
          "name": "special_price",
          "type": "number",
          "required": false,
          "placeholder": "z.B. 12.90"
        }
      ]
    },
    {
      "type": "photo_suggestion",
      "template": "food_styling",
      "guidance": {
        "de": "Fotografiere das Gericht von schräg oben mit natürlichem Licht",
        "en": "Photograph the dish from above at an angle with natural light"
      }
    }
  ],
  "channels": [
    {
      "platform": "google_my_business",
      "post_type": "offer",
      "scheduling": "immediate"
    },
    {
      "platform": "facebook",
      "post_type": "photo_post",
      "scheduling": "optimal_time"
    },
    {
      "platform": "instagram",
      "post_type": "feed_post",
      "scheduling": "optimal_time"
    }
  ],
  "disclaimers": {
    "de": [
      "Umsatzprognosen sind unverbindlich und basieren auf Erfahrungswerten ähnlicher Betriebe",
      "Erfolg hängt von Qualität und Relevanz der Inhalte ab",
      "Regelmäßigkeit ist wichtiger als Quantität"
    ],
    "en": [
      "Revenue projections are non-binding and based on experience with similar businesses",
      "Success depends on quality and relevance of content",
      "Consistency is more important than quantity"
    ]
  }
}