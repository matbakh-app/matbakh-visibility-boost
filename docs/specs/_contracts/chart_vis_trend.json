{
  "id": "vc.chart.subscores_timeseries",
  "x_axis": {
    "type": "datetime",
    "unit": "week",
    "range": "12_weeks",
    "format": "MMM DD"
  },
  "y_axis": {
    "type": "numeric",
    "unit": "score",
    "range": [0, 100],
    "format": "integer"
  },
  "granularity": "weekly",
  "datasource": {
    "primary": "vc_runs.scores",
    "fallback": "vc_runs.inputs.raw",
    "aggregation": "weekly_average"
  },
  "series": [
    {
      "id": "google_score",
      "label": "Google",
      "color": "#4285F4",
      "weight": 0.4
    },
    {
      "id": "social_score", 
      "label": "Social Media",
      "color": "#1877F2",
      "weight": 0.3
    },
    {
      "id": "web_score",
      "label": "Website",
      "color": "#34A853",
      "weight": 0.2
    },
    {
      "id": "other_score",
      "label": "Sonstige",
      "color": "#FBBC04",
      "weight": 0.1
    }
  ],
  "transforms": [
    {
      "type": "moving_average",
      "window": 3,
      "apply_to": ["all_series"]
    },
    {
      "type": "trend_detection",
      "method": "linear_regression",
      "apply_to": ["total_score"]
    }
  ],
  "empty_state": {
    "condition": "no_data_points",
    "message": {
      "de": "Noch keine Verlaufsdaten verfügbar. Erste Messung läuft...",
      "en": "No historical data available yet. First measurement in progress..."
    },
    "placeholder": "skeleton_chart"
  },
  "annotations": [
    {
      "type": "benchmark_line",
      "value": "industry_average",
      "label": {
        "de": "Branchendurchschnitt",
        "en": "Industry Average"
      },
      "style": "dashed_line"
    },
    {
      "type": "goal_zone",
      "range": [80, 100],
      "label": {
        "de": "Zielbereich",
        "en": "Target Zone"
      },
      "style": "shaded_area"
    }
  ],
  "interactions": {
    "tooltip": {
      "format": "detailed",
      "includes": ["value", "trend", "benchmark", "confidence"]
    },
    "zoom": {
      "enabled": true,
      "min_range": "4_weeks",
      "max_range": "52_weeks"
    },
    "drill_down": {
      "enabled": true,
      "target": "platform_details_view"
    }
  }
}