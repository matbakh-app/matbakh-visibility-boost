{
  "id": "vc.kpi.total_visibility",
  "title": "Total Visibility Score",
  "description_userlang": {
    "de": "Gesamtscore deiner Online-Sichtbarkeit",
    "en": "Overall score of your online visibility"
  },
  "source_tables": [
    "vc_runs",
    "vc_scores",
    "vc_benchmarks"
  ],
  "calc": {
    "formula": "(google_score * 0.4) + (social_score * 0.3) + (web_score * 0.2) + (other_score * 0.1)",
    "inputs": {
      "google_score": "adapter.google.places.completeness + adapter.google.places.reviews",
      "social_score": "adapter.meta.graph.engagement + adapter.meta.graph.activity",
      "web_score": "adapter.web.lighthouse.performance + adapter.web.lighthouse.seo",
      "other_score": "adapter.review.public.coverage + adapter.trends.relevance"
    },
    "normalization": "0-100 scale",
    "rounding": "integer"
  },
  "freshness": {
    "update_frequency": "daily",
    "cache_duration": "24h",
    "stale_threshold": "72h"
  },
  "evidence": {
    "required_sources": ["google.places", "meta.graph", "web.lighthouse"],
    "optional_sources": ["review.public", "trends"],
    "min_confidence": "medium"
  },
  "confidence": {
    "high": "all_sources_available && data_age < 24h",
    "medium": "primary_sources_available && data_age < 72h",
    "low": "partial_sources_available || data_age > 72h"
  },
  "personas": {
