{
  "$schema": "https://matbakh.app/schemas/og_share_preview.schema.json",
  "version": "1.0",
  "entity": "vc_share_preview",
  "description": "Open Graph metadata contract for VC social media sharing",
  "fields": {
    "title": {
      "type": "string",
      "maxLength": 60,
      "description": "OG title for social media preview"
    },
    "description": {
      "type": "string", 
      "maxLength": 120,
      "description": "OG description, no technical jargon, German primary"
    },
    "image_url": {
      "type": "string",
      "format": "url",
      "description": "Preview image URL for social sharing"
    },
    "alt": {
      "type": "string",
      "maxLength": 100,
      "description": "Alt text for preview image"
    },
    "theme": {
      "type": "string",
      "enum": ["light", "dark"],
      "description": "Visual theme for preview generation"
    },
    "badges": {
      "type": "array",
      "maxItems": 2,
      "items": {
        "type": "object",
        "properties": {
          "label": {"type": "string"},
          "value": {"type": "string"}
        }
      },
      "description": "Optional badges like 'Kostenlos' or '60 Sekunden'"
    },
    "utm": {
      "type": "object",
      "properties": {
        "source": {"type": "string"},
        "medium": {"type": "string"}, 
        "campaign": {"type": "string"}
      },
      "description": "UTM parameters for attribution tracking"
    },
    "ref": {
      "type": "string",
      "enum": ["li", "fb", "ig", "qr", "partner"],
      "description": "Reference source for tracking"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "Cache expiration for dynamic previews"
    }
  },
  "examples": {
    "linkedin_share": {
      "title": "Restaurant Sichtbarkeit pr√ºfen - 60 Sekunden",
      "description": "Finde heraus, wie sichtbar dein Restaurant online ist. Kostenlose Analyse mit Ranking und konkreten Verbesserungen.",
      "image_url": "https://matbakh.app/og/vc-preview-de.jpg",
      "alt": "Matbakh Visibility Check - Restaurant Ranking in 60 Sekunden",
      "theme": "light",
      "badges": [
        {"label": "Kostenlos", "value": ""},
        {"label": "Dauer", "value": "60s"}
      ],
      "utm": {
        "source": "linkedin",
        "medium": "social",
        "campaign": "vc_share_organic"
      },
      "ref": "li"
    }
  }
}