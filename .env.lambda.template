# Lambda Environment Variables Template
# Kopiere zu .env.lambda und fülle die Werte aus

# ==============================================
# RDS PostgreSQL Connection
# ==============================================
MATBAKH_DB_HOST=matbakh-rds-instance.cluster-xyz.eu-central-1.rds.amazonaws.com
MATBAKH_DB_USER=matbakh_user
MATBAKH_DB_NAME=matbakh_production
MATBAKH_DB_PASSWORD=<via-secrets-manager>
MATBAKH_DB_PORT=5432

# ==============================================
# AWS Configuration
# ==============================================
AWS_REGION=eu-central-1
AWS_ACCOUNT_ID=055062860590

# ==============================================
# Lambda Function Names
# ==============================================
COGNITO_POST_CONFIRMATION_FUNCTION=cognito-post-confirmation
FIX_TABLES_FUNCTION=matbakh-fix-tables

# ==============================================
# Cognito Configuration
# ==============================================
COGNITO_USER_POOL_ID=eu-central-1_farFjTHKf
COGNITO_USER_POOL_CLIENT_ID=<client-id>

# ==============================================
# Secrets Manager
# ==============================================
DB_SECRET_NAME=matbakh-rds-credentials
DB_SECRET_ARN=arn:aws:secretsmanager:eu-central-1:055062860590:secret:matbakh-rds-credentials

# ==============================================
# Feature Flags (für Lambda Logic)
# ==============================================
ENABLE_USER_PROFILE_CREATION=true
ENABLE_ONBOARDING_STEPS=true
ENABLE_DETAILED_LOGGING=true
DEFAULT_USER_ROLE=owner
DEFAULT_LOCALE=de

# ==============================================
# Deployment Configuration
# ==============================================
LAMBDA_RUNTIME=nodejs18.x
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=256

# ==============================================
# VPC Configuration (für RDS Access)
# ==============================================
VPC_ID=vpc-xyz
SUBNET_IDS=subnet-abc,subnet-def
SECURITY_GROUP_ID=sg-lambda-rds

# ==============================================
# CI/CD Integration
# ==============================================
GITHUB_REPO=matbakh-visibility-boost
DEPLOYMENT_STAGE=production
LAMBDA_LAYER_ARN=arn:aws:lambda:eu-central-1:055062860590:layer:matbakh-dependencies

# ==============================================
# Monitoring & Logging
# ==============================================
LOG_LEVEL=INFO
CLOUDWATCH_LOG_GROUP=/aws/lambda/cognito-post-confirmation
ENABLE_X_RAY_TRACING=true

# ==============================================
# Error Handling
# ==============================================
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
ENABLE_DEAD_LETTER_QUEUE=true